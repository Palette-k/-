<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gdufe.cs.works.mapper.WorksMapper">



    <update id="incCommentCount" parameterType="works">
        update works
        set comment_count = comment_count + #{commentCount}
        where id = #{id}
    </update>

    <select id="selectRelated" parameterType="works" resultType="works">
        select * from works
        <where>
            <if test="id != null">
                and id != #{id}
            </if>
            <if test="tag != null and tag != ''">
                and tag regexp #{tag}
            </if>
        </where>
        order by gmt_create desc limit 20
    </select>


</mapper>
