<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-mybatis.org//OTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gdufe.cs.admin.mapper.UserMapper">
    <update id="update">
        update user
        <set>
            <if test="username != null">
                username=#{username},
            </if>
            <if test="password != null">
                password=#{password},
            </if>
            <if test="account != null">
                account=#{account},
            </if>
            <if test="gender != null">
                gender=#{gender},
            </if>
            <if test="email != null">
                email=#{email},
            </if>
            <if test="age != null">
                age=#{age},
            </if>
        </set>
        <where>
            id=#{id}
        </where>
    </update>
</mapper>
